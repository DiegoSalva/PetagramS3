<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="125dp"
    android:layout_width="match_parent"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_gravity="center_horizontal"
    card_view:cardCornerRadius="4dp"
    android:layout_marginBottom="10dp"
    android:id="@+id/cvPetGrid">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/colorCardview"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/ivFotoCV"
                android:layout_width="match_parent"
                android:layout_height="75dp"
                android:src="@drawable/brian"
                android:layout_gravity="center_horizontal"
                android:textAlignment="center"/>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/ibHuesoB"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/dog_bone_bn"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:backgroundTint="#00ffffff" />

            <TextView
                android:id="@+id/tvNombreCV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="NombrePerro"
                android:textSize="20dp"
                android:textStyle="bold"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"/>


            <ImageButton
                android:id="@+id/ibHuesoG"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/dog_bone_g"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:backgroundTint="#00ffffff" />

        </RelativeLayout>
        </LinearLayout>



</android.support.v7.widget.CardView>
